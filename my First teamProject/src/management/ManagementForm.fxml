<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="management.ManagementController">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: white;">
         <top>
            <Label alignment="CENTER" text="메뉴 선택" BorderPane.alignment="CENTER">
               <padding>
                  <Insets top="10.0" />
               </padding>
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </top>
         <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="50.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#showMember" text="회원 정보 조회">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#showExitReason" text="탈퇴 사유 조회">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#cancel" text="취소">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </center>
         <padding>
            <Insets top="30.0" />
         </padding>
      </BorderPane>
   </children>
</AnchorPane>
