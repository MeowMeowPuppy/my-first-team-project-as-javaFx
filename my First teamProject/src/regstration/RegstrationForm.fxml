            </TextField>
            <PasswordField fx:id="pw" layoutX="158.0" layoutY="182.0" prefHeight="40.0" prefWidth="200.0" promptText="비밀번호" style="-fx-background-radius: 30;">
               <font>
                  <Font size="14.0" />
               </font>
            </PasswordField>
            <PasswordField fx:id="confirm" layoutX="158.0" layoutY="244.0" prefHeight="40.0" prefWidth="200.0" promptText="비밀번호 확인" style="-fx-background-radius: 30;">
               <font>
                  <Font size="14.0" />
               </font>
            </PasswordField>
            <TextField fx:id="name" layoutX="158.0" layoutY="303.0" prefHeight="40.0" prefWidth="200.0" promptText="이름" style="-fx-background-radius: 30;">
